{% extends 'base.html.twig' %}

{% block title %}Cat index{% endblock %}

{% block body %}
    <h1>Cat index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>NumICAD</th>
                <th>Name</th>
                <th>Sex</th>
                <th>HasDateBirth</th>
                <th>DateBirth</th>
                <th>DescShort</th>
                <th>DescLong</th>
                <th>Id</th>
                <th>Race</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for cat in cats %}
            <tr>
                <td>{{ cat.numICAD }}</td>
                <td>{{ cat.name }}</td>
                <td>{{ cat.sex }}</td>
                <td>{{ cat.hasDateBirth ? 'Yes' : 'No' }}</td>
                <td>{{ cat.dateBirth ? cat.dateBirth|date('Y-m-d') : '' }}</td>
                <td>{{ cat.descShort }}</td>
                <td>{{ cat.descLong }}</td>
                <td>{{ cat.id }}</td>
                <td>{{ cat.race }}</td>
                <td>
                    <a href="{{ path('app_cat_show', {'id': cat.id}) }}">show</a>
                    <a href="{{ path('app_cat_edit', {'id': cat.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="10">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_cat_new') }}">Create new</a>
{% endblock %}
